{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "babelOptions": {
      "presets": ["@babel/preset-env"]
    }
  },
  "extends": ["airbnb-base"],
  "presets": ["@babel/preset-env"],
  "rules": {
    "no-shadow": "off",
    "linebreak-style": 0,
    "no-param-reassign": "off",
    "eol-last": "off",
    "import/extensions": [
      1,
      {
        "js": "always",
        "json": "always"
      }
    ]
  },
  "ignorePatterns": ["dist/", "build/"]
}
